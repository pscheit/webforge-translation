{
    "name": "webforge/translation",
    "description": "Translation component based on symfony/translation",
    "require": {
        "symfony/translation": "2.5.*",
        "symfony/finder": "2.5.*",
        "symfony/config": "2.5.*"
    },
    "require-dev": {
        "webforge/testplate": "1.2.*@dev",
        "liip/rmt": "0.9.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Scheit",
            "email": "p.scheit@ps-webforge.com"
        }
    ],
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "autoload": {
        "psr-0": {
            "Webforge\\Translation": ["lib/", "tests/"]
        }
    }
}
